{
  "name": "skeleton-angular",
  "version": "0.0.3",
  "scripts": {
    "ng": "ng",
    "dev": "ng serve",
    "start": "ng serve",
    "build": "ng build",
    "lib:build": "cd projects/lib && ng build lib",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "e2e": "ng e2e",
    "version:patch": "cd projects/lib && npm version patch && git add package*.json && git commit -m \"version: patch\" && git push",
    "version:minor": "cd projects/lib && npm version minor && git add package*.json && git commit -m \"version: minor\" && git push",
    "version:major": "cd projects/lib && npm version major && git add package*.json && git commit -m \"version: major\" && git push",
    "version:publish": "cd dist/lib && npm publish --scope=code-coaching --access public"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.0",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.1.0",
    "@angular/core": "^18.1.0",
    "@angular/forms": "^18.1.0",
    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/router": "^18.1.0",
    "lucide-angular": "^0.408.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.0",
    "@angular/cli": "^18.1.0",
    "@angular/compiler-cli": "^18.1.0",
    "@skeletonlabs/skeleton": "^3.0.0-next.1",
    "@tailwindcss/forms": "^0.5.7",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.19",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.1.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.5",
    "typescript": "~5.5.2"
  }
}
